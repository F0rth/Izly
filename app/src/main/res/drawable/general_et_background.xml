<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/general_edittext_border_shadow" />
                    <padding android:right="1.0px" android:bottom="1.0px" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/general_editext_disable_bg" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/general_edittext_border_shadow" />
                    <padding android:right="1.0px" android:bottom="1.0px" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/general_editext_pressed_bg" />
                    <stroke android:width="@dimen/edittext_border_normal_padding" android:color="@color/general_editext_pressed_border" android:dashWidth="@dimen/edittext_border_normal_padding" />
                    <padding android:left="@dimen/edittext_inside_padding_left" android:right="@dimen/edittext_inside_padding_right" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="true" android:state_enabled="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/general_edittext_border_shadow" />
                    <padding android:right="1.0px" android:bottom="1.0px" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/general_editext_focused_bg" />
                    <stroke android:width="@dimen/edittext_border_focused_padding" android:color="@color/general_editext_focused_border" android:dashWidth="@dimen/edittext_border_normal_padding" />
                    <padding android:left="@dimen/edittext_inside_padding_left" android:right="@dimen/edittext_inside_padding_right" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/general_edittext_border_shadow" />
                    <padding android:right="1.0px" android:bottom="1.0px" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/white" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>