<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/list_item_focused_bg" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/list_item_pressed_bg" />
        </shape>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/default_separator" />
                </shape>
            </item>
            <item android:top="1.0dip" android:bottom="1.0dip">
                <shape android:shape="rectangle">
                    <gradient android:startColor="@color/list_item_normal_bg_start" android:endColor="@color/list_item_normal_bg_end" android:angle="90.0" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>