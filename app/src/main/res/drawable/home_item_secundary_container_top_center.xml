<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/home_item_border_grey" />
                </shape>
            </item>
            <item android:left="@dimen/home_general_item_border" android:right="@dimen/home_general_item_border" android:bottom="@dimen/home_general_item_border">
                <shape android:shape="rectangle">
                    <size android:height="@dimen/home_secundary_item_height" android:width="@dimen/home_secundary_item_width" />
                    <solid android:color="@color/bg_home_item_focused" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/home_item_border_grey" />
                </shape>
            </item>
            <item android:left="@dimen/home_general_item_border" android:right="@dimen/home_general_item_border" android:bottom="@dimen/home_general_item_border">
                <shape android:shape="rectangle">
                    <size android:height="@dimen/home_secundary_item_height" android:width="@dimen/home_secundary_item_width" />
                    <solid android:color="@color/bg_home_item_pressed" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/home_item_border_grey" />
                </shape>
            </item>
            <item android:left="@dimen/home_general_item_border" android:right="@dimen/home_general_item_border" android:bottom="@dimen/home_general_item_border">
                <shape android:shape="rectangle">
                    <size android:height="@dimen/home_secundary_item_height" android:width="@dimen/home_secundary_item_width" />
                    <solid android:color="@color/bg_home_item_normal" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>