<?xml version="1.0" encoding="utf-8"?>
<selector android:dither="true"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/holo_black" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/holo_black" />
        </shape>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#ff424242" />
                    <padding android:top="1.0px" />
                </shape>
            </item>
            <item>
                <bitmap android:src="@drawable/bg_item_list" android:dither="true" />
            </item>
        </layer-list>
    </item>
</selector>